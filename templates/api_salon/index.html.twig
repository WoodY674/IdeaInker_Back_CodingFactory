{% extends 'base.html.twig' %}

{% block title %}Salon index{% endblock %}

{% block body %}
    <h1>Salon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>DeletedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for salon in salons %}
            <tr>
                <td>{{ salon.id }}</td>
                <td>{{ salon.address }}</td>
                <td>{{ salon.zipCode }}</td>
                <td>{{ salon.city }}</td>
                <td>{{ salon.createdAt ? salon.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ salon.updatedAt ? salon.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ salon.deletedAt ? salon.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('api_salon_show', {'id': salon.id}) }}">show</a>
                    <a href="{{ path('api_salon_edit', {'id': salon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('api_salon_new') }}">Create new</a>
{% endblock %}
